<%= maglev_section.wrapper_tag.div class: 'relative py-0 sm:py-8' do %>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <%= maglev_section.setting_tag :title, html_tag: 'h2', class: 'text-center text-lg font-semibold leading-8 text-gray-900' %>

    <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      <% maglev_section.blocks.each do |maglev_block| %>
        <%= maglev_block.wrapper_tag.div class: 'col-span-2 lg:col-span-1' do %>
          <%= maglev_block.setting_tag :image, class: 'w-full object-contain max-h-12' %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>