<%= render_ncuikit :page_layout, title: 'Sites' do |page| %>

  <% page.with_actions do %>
    <%= render_ncuikit_button :primary_link, label: 'Add site', url: new_site_path, icon: 'ri-add-line' if @sites.present? %>
  <% end %>

  <% if @sites.empty? %>
    <%= render_ncuikit :empty_state, title: 'No sites', subtitle: 'Get started by creating your first site.', icon: 'ri-pages-line' do %>
      <%= render_ncuikit_button :primary_link, label: 'Create site', url: new_site_path, icon: 'ri-add-line' %>
      <% end %>
  <% else %>
    <%= render_ncuikit_list :grid_list do %>
      <%= render @sites %>
    <% end %>
  <% end %>

<% end %>